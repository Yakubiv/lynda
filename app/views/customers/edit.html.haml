.row
  .col-md-10.col-md-offset-1
    %h3.text-center Change customer data
    = form_for @customer do|c|
      .form-group.bg-lt.wrapper
        .row
          .col-xs-6
            .form-group
              = c.label :first_name, 'First Name'
              = c.text_field :first_name, class: 'form-control', placeholder: 'Enter first name'
          .col-xs-6
            .form-group
              = c.label :last_name, 'Last Name'
              = c.text_field :last_name, class: 'form-control', placeholder: 'Enter last name'
        .row
          .col-xs-12
            .form-group
              = c.label :phone, 'Phone'
              = c.text_field :phone, class: 'form-control', placeholder: 'Phone'
        .row
          .btn-group.wrapper
            = c.submit 'Done', class: 'btn btn-default btn-md'