.m-t-xl
  .list-group
    = link_to 'Appointments', appointments_path, class: "list-group-item #{'active' if controller_name == 'appointments' && params[:action] == 'index' || params[:action] == 'completed' || params[:action] == 'canceled'}"
    = link_to(fa_icon('plus')+ ' appointment', new_appointment_path, class: "list-group-item #{'active' if controller_name == 'appointments' && params[:action] == 'new'}")
    = link_to 'Customers', customers_path, class: "list-group-item #{'active' if controller_name == 'customers' && params[:action] == 'index'}"
    = link_to fa_icon('plus')+ ' customer', new_customer_path, class: "list-group-item #{'active' if controller_name == 'customers' && params[:action] == 'new'}"
    = link_to 'Services', services_path, class: "list-group-item #{'active' if controller_name == 'services' && params[:action] == 'index'}"
    = link_to fa_icon('plus')+' service', new_service_path, class: "list-group-item #{'active' if controller_name == 'services' && params[:action] == 'new'}"
    - if admin_signed_in?
      = link_to destroy_admin_session_path, method: :delete, title: 'Log Out', class: 'list-group-item list-group-item-danger' do
        %i.fa.fa-sign-out
        Sign Out
