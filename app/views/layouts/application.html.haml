!!!
%html
  %head
    %title Lynda
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    .navbar.navbar-default.navbar-fixed-top.navbar-op
      .container-fluid
        = render 'layouts/navbar'
    .container-fluid
      .row
        - if admin_signed_in?
          .col-sm-3.col-md-2.sidebar
            %ul.nav.nav-sidebar
              = render 'layouts/linklist'
        .col-sm-9.col-sm-offset-3.col-md-10.col-md-offset-2.m-t-xl
          = yield