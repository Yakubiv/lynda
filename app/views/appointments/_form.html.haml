.container
  .row.m-t-xl
    .col-xs-6.col-sm-6.col-xs-offset-3
      %h2.text-center New appointment
      = form_for @appointment do |a|
        .form-group
          .input-group#datetimepicker1
            = a.text_field :date, class: 'form-control'
            %span.input-group-addon
              %i.fa.fa-calendar
        .form-group
          = a.submit 'done', class: 'btn btn-success btn-block'
        :javascript
          $(function () {
              $('#datetimepicker1').datetimepicker({
              dateFormat: 'yyy-dd-mm HH:MM',
              sideBySide: true
              }).val();
          });