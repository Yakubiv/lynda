.container
  .row
    .col-sm-12.col-xs-12.col-md-5.col-md-offset-5
      .login-form
        .text-center= image_tag 'badge.jpg', class: 'img-b'
        %h2.text-center Login to your business account
        = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
          = devise_error_messages!
          %p.padder-v
            = f.email_field :email, placeholder: 'Email', autofocus: true, class: 'form-control input-lg'
          %p
            = f.password_field :password, placeholder: 'Password', class: 'form-control input-lg'
          - if devise_mapping.rememberable?
            .field
              = f.check_box :remember_me
              = f.label :remember_me
          %p.padder-v
            = f.submit "Log in", class: 'btn btn-lg btn-block'
